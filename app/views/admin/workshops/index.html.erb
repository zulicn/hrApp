<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading red-heading">
        Radionice
        <a href=<%= new_admin_workshop_path %> >
          <span class="glyphicon glyphicon-plus-sign pull-right" data-toggle="tooltip" data-placement="top" title="Dodaj radionicu"></span>
        </a>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <th>Ime</th>
            <th>Opis</th>
            <th>LC</th>
            <th>Početak</th>
            <th>Kraj</th>
          </thead>
          <tbody>
          <% @workshops.each do |workshop| %>
            <tr class="workshop-active">
              <td><%= workshop.name %></td>
              <td><small><%= workshop.description %></small></td>
              <td><%= workshop.lc %></td>
              <td><%= workshop.start_date %></td>
              <td><%= workshop.end_date %></td>
              <td>
                <%= button_to 'Vidi opis u modalu', admin_workshop_path(workshop), class: 'pull-right btn btn-default', :method => :get%>
                <%= link_to 'Promijeni', edit_admin_workshop_path(workshop) %> |
                <%= link_to 'Izbriši', admin_workshop_path(workshop), method: :delete, data: { confirm: "Jeste li sigurni?" } %> 
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
