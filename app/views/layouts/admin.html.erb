<!DOCTYPE html>
<html>
<head>
  <title>HrApp | Admin</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600', media: 'all'%>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Hind:400,500,600,700,300&subset=latin,latin-ext', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top dashboard">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("eestec.png", class: 'navbar_brand', width: '100', alt: "Logo"), root_path %>
      </div>


      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar">
          <%= link_to 'Dashboard', admin_dashboard_path, class: 'btn btn-default btn-dashboard' %>
          <%= link_to 'Članovi', admin_users_path, class: 'btn btn-default btn-users' %>
          <%= link_to 'Projekti', admin_projects_path, class: 'btn btn-default btn-projects' %>
          <%= link_to 'Događaji', events_path, class: 'btn btn-default btn-events' %>
          <%= link_to 'Radionice', admin_projects_path, class: 'btn btn-default btn-workshops' %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="pacific-blue"><span class="glyphicon glyphicon-user"></span> <%= @current_user.fullname%>  <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="pacific-blue"><%= link_to 'Uredi profil', edit_user_path %></li>
              <li class="pacific-blue"><%= link_to 'Odjavi se!', session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="dashboard-container">
    <%= yield %>
  </div>


  <nav class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
      @Copyright 2015 - EESTEC LC Sarajevo
    </div>
  </nav>
</body>
</html>
